<footer class="bg-green-deep text-white mt-20">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <div>
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-10 h-10 bg-green-primary rounded-full flex items-center justify-center">
            <span class="text-white font-bold text-xl">AL</span>
          </div>
          <span class="text-2xl font-bold">Ecommerce</span>
        </div>
        <p class="text-white/80 mb-4">Your one-stop shop for quality products at great prices. Shop with confidence!</p>
        <div class="flex items-center space-x-4">
          <% store_setting = StoreSetting.instance %>
          <% if store_setting.facebook_url.present? %>
            <%= link_to store_setting.facebook_url, target: "_blank", class: "text-white hover:text-green-primary transition-colors duration-200" do %>
              <%= render "shared/svg_icons/facebook", class: "w-5 h-5" %>
            <% end %>
          <% end %>
          <% if store_setting.instagram_url.present? %>
            <%= link_to store_setting.instagram_url, target: "_blank", class: "text-white hover:text-green-primary transition-colors duration-200" do %>
              <%= render "shared/svg_icons/instagram", class: "w-5 h-5" %>
            <% end %>
          <% end %>
          <% if store_setting.youtube_url.present? %>
            <%= link_to store_setting.youtube_url, target: "_blank", class: "text-white hover:text-green-primary transition-colors duration-200" do %>
              <%= render "shared/svg_icons/youtube", class: "w-5 h-5" %>
            <% end %>
          <% end %>
        </div>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><%= link_to "Home", root_path, class: "text-white/80 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "Products", products_path, class: "text-white/80 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "Categories", root_path(anchor: "categories"), class: "text-white/80 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "About Us", about_path, class: "text-white/80 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "Contact", contact_path, class: "text-white/80 hover:text-white transition-colors duration-200" %></li>
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4">Customer Service</h3>
        <ul class="space-y-2">
          <li><%= link_to user_signed_in? ? dashboard_path : new_user_session_path, class: "text-white/80 hover:text-white transition-colors duration-200" do %>My Account<% end %></li>
          <li><%= link_to user_signed_in? ? orders_path : new_user_session_path, class: "text-white/80 hover:text-white transition-colors duration-200" do %>Order Tracking<% end %></li>
          <li><%= link_to returns_path, class: "text-white/80 hover:text-white transition-colors duration-200" do %>Returns & Exchanges<% end %></li>
          <li><%= link_to shipping_path, class: "text-white/80 hover:text-white transition-colors duration-200" do %>Shipping Info<% end %></li>
          <li><%= link_to faqs_path, class: "text-white/80 hover:text-white transition-colors duration-200" do %>FAQs<% end %></li>
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4">Contact Us</h3>
        <ul class="space-y-3">
          <% store_setting = StoreSetting.instance %>
          <li class="flex items-start">
            <%= render "shared/svg_icons/location", class: "w-5 h-5 mr-2 mt-0.5 flex-shrink-0 text-white/80" %>
            <span class="text-white/80"><%= store_setting.location %></span>
          </li>
          <li class="flex items-center">
            <%= render "shared/svg_icons/phone", class: "w-5 h-5 mr-2 flex-shrink-0 text-white/80" %>
            <%= link_to store_setting.phone_number, "tel:#{store_setting.phone_number}", class: "text-white/80 hover:text-white transition-colors" %>
          </li>
          <li class="flex items-center">
            <%= render "shared/svg_icons/email", class: "w-5 h-5 mr-2 flex-shrink-0 text-white/80" %>
            <%= link_to store_setting.email, "mailto:#{store_setting.email}", class: "text-white/80 hover:text-white transition-colors" %>
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t border-green-light/20 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-white/80 text-sm">Â© <%= Time.now.year %> AL Ecommerce. All rights reserved.</p>
        <div class="flex items-center space-x-6 mt-4 md:mt-0">
          <%= link_to privacy_path, class: "text-white/80 hover:text-white text-sm transition-colors duration-200" do %>Privacy Policy<% end %>
          <%= link_to terms_path, class: "text-white/80 hover:text-white text-sm transition-colors duration-200" do %>Terms of Service<% end %>
          <%= link_to cookies_path, class: "text-white/80 hover:text-white text-sm transition-colors duration-200" do %>Cookie Policy<% end %>
        </div>
      </div>
    </div>
  </div>
</footer>

