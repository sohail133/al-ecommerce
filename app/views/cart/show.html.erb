<% content_for :title, "Shopping Cart - AL Ecommerce" %>

<div class="min-h-screen bg-pink-lightest">
  <%= render "pages/shared/header" %>

  <div class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-green-deep mb-2">Shopping Cart</h1>
      <p class="text-green-muted">Review your items and proceed to checkout</p>
    </div>

    <% if @cart.cart_items.any? %>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
          <div class="bg-white rounded-lg border border-pink-border shadow-sm p-6">
            <h2 class="text-xl font-bold text-green-deep mb-6">Cart Items (<%= @cart.items_count %>)</h2>
            
            <div class="space-y-6">
              <% @cart.cart_items.includes(product_variant: { product: [:category, :subcategory, cover_image_attachment: :blob, images_attachments: :blob], inventory: [] }).each do |cart_item| %>
                <div class="flex items-start space-x-4 p-4 border border-pink-border rounded-lg hover:border-green-primary transition-all duration-200">
                  <div class="flex-shrink-0">
                    <%= link_to product_path(cart_item.product_variant.product) do %>
                      <% if cart_item.product_variant.product.cover_image.attached? %>
                        <%= image_tag cart_item.product_variant.product.cover_image, class: "w-24 h-24 object-cover rounded-lg border border-pink-border hover:scale-105 transition-transform duration-200" %>
                      <% elsif cart_item.product_variant.product.images.attached? %>
                        <%= image_tag cart_item.product_variant.product.images.first, class: "w-24 h-24 object-cover rounded-lg border border-pink-border hover:scale-105 transition-transform duration-200" %>
                      <% else %>
                        <div class="w-24 h-24 bg-gradient-to-br from-green-light to-green-primary rounded-lg flex items-center justify-center">
                          <span class="text-white font-bold text-sm"><%= cart_item.product_variant.product.title.first(2).upcase %></span>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                  
                  <div class="flex-1 min-w-0">
                    <%= link_to product_path(cart_item.product_variant.product), class: "block" do %>
                      <h3 class="font-semibold text-green-deep text-lg hover:text-green-primary transition-colors"><%= cart_item.product_variant.product.title %></h3>
                    <% end %>
                    <p class="text-sm text-green-muted mt-1"><%= cart_item.product_variant.product.category.name %></p>
                    
                    <div class="mt-3" data-controller="cart-variant">
                      <label class="block text-sm font-medium text-green-deep mb-2">Variant:</label>
                      <select class="form-select w-full max-w-xs" 
                              data-cart-variant-target="select"
                              data-cart-item-id="<%= cart_item.id %>" 
                              data-product-id="<%= cart_item.product_variant.product_id %>"
                              data-action="change->cart-variant#handleVariantChange">
                        <% cart_item.product_variant.product.product_variants.active.includes(:inventory).each do |variant| %>
                          <option value="<%= variant.id %>" <%= 'selected' if variant.id == cart_item.product_variant_id %> 
                            data-price="<%= variant.price %>"
                            data-stock="<%= variant.inventory&.available_quantity || 0 %>">
                            <%= variant.name %> - $<%= variant.price %> 
                            (<%= variant.inventory&.available_quantity || 0 %> in stock)
                          </option>
                        <% end %>
                      </select>
                    </div>
                    
                    <div class="flex items-center space-x-4 mt-4">
                      <div>
                        <label class="block text-sm font-medium text-green-deep mb-2">Quantity:</label>
                        <div class="flex items-center space-x-2">
                          <%= form_with url: cart_update_quantity_path(cart_item.id), method: :patch, class: "inline" do |qty_form| %>
                            <%= qty_form.hidden_field :quantity, value: [cart_item.quantity - 1, 1].max %>
                            <%= qty_form.button type: :submit, class: "w-10 h-10 flex items-center justify-center border-2 border-pink-border rounded-lg hover:bg-red-50 hover:border-red-300 transition-all duration-200 transform hover:scale-105" do %>
                              <span class="text-red-500 font-bold text-lg">-</span>
                            <% end %>
                          <% end %>
                          
                          <span class="text-base font-semibold text-green-deep w-12 text-center px-3 py-2 border border-pink-border rounded-lg"><%= cart_item.quantity %></span>
                          
                          <%= form_with url: cart_update_quantity_path(cart_item.id), method: :patch, class: "inline" do |qty_form| %>
                            <%= qty_form.hidden_field :quantity, value: cart_item.quantity + 1 %>
                            <%= qty_form.button type: :submit, class: "w-10 h-10 flex items-center justify-center border-2 border-pink-border rounded-lg hover:bg-green-light hover:border-green-primary transition-all duration-200 transform hover:scale-105" do %>
                              <span class="text-green-primary font-bold text-lg">+</span>
                            <% end %>
                          <% end %>
                        </div>
                      </div>
                      
                      <div class="text-sm">
                        <span class="block text-green-muted mb-1">Unit Price:</span>
                        <span class="font-semibold text-green-deep text-lg">$<%= cart_item.price_snapshot %></span>
                      </div>
                    </div>
                  </div>
                  
                  <div class="text-right">
                    <div class="font-bold text-green-primary text-2xl mb-4">$<%= cart_item.subtotal.round(2) %></div>
                    <%= link_to remove_from_cart_path(cart_item.product_variant_id), method: :delete, 
                        data: { turbo_method: :delete, turbo_confirm: "Remove this item from cart?" }, 
                        class: "inline-flex items-center space-x-1 text-sm text-red-500 hover:text-red-700 hover:underline transition-colors" do %>
                      <%= render "shared/svg_icons/trash", class: "w-4 h-4" %>
                      <span>Remove</span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
            
            <div class="mt-6 pt-6 border-t border-pink-border flex justify-between items-center">
              <%= link_to products_path, class: "text-green-primary hover:text-green-dark font-medium transition-colors" do %>
                <div class="flex items-center space-x-2">
                  <span>‚Üê Continue Shopping</span>
                </div>
              <% end %>
              
              <%= link_to clear_cart_path, method: :delete, 
                  data: { turbo_method: :delete, turbo_confirm: "Clear all items from cart?" }, 
                  class: "text-red-500 hover:text-red-700 font-medium transition-colors" do %>
                Clear Cart
              <% end %>
            </div>
          </div>
        </div>

        <div class="lg:col-span-1">
          <div class="bg-white rounded-lg border border-pink-border shadow-sm p-6 sticky top-4">
            <h2 class="text-xl font-bold text-green-deep mb-6">Order Summary</h2>
            
            <div class="space-y-3 mb-6">
              <div class="flex justify-between text-base">
                <span class="text-green-muted">Subtotal (<%= @cart.items_count %> items)</span>
                <span class="text-green-deep font-medium">$<%= @cart.total.round(2) %></span>
              </div>
              <div class="flex justify-between text-base">
                <span class="text-green-muted">Shipping</span>
                <span class="text-green-primary font-medium">Free</span>
              </div>
              <div class="flex justify-between text-base">
                <span class="text-green-muted">Tax</span>
                <span class="text-green-deep font-medium">$0.00</span>
              </div>
              <div class="border-t border-pink-border pt-3 flex justify-between items-center">
                <span class="font-bold text-green-deep text-lg">Total</span>
                <span class="font-bold text-green-primary text-2xl">$<%= @cart.total.round(2) %></span>
              </div>
            </div>

            <%= link_to checkout_path, class: "block w-full bg-green-primary text-white text-center px-6 py-4 rounded-lg hover:bg-green-dark transition-all duration-200 font-bold text-lg shadow-lg hover:shadow-xl transform hover:scale-105 mb-4" do %>
              Proceed to Checkout
            <% end %>
            
            <div class="text-center text-sm text-green-muted">
              <p>Secure Checkout</p>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-lg border border-pink-border shadow-sm p-12 text-center">
        <div class="mb-6">
          <%= render "shared/svg_icons/cart", class: "w-24 h-24 text-green-muted mx-auto" %>
        </div>
        <h2 class="text-2xl font-bold text-green-deep mb-2">Your cart is empty</h2>
        <p class="text-green-muted mb-6">Add some products to get started!</p>
        <%= link_to "Browse Products", products_path, class: "inline-block bg-green-primary text-white px-8 py-3 rounded-lg hover:bg-green-dark transition-all duration-200 font-semibold" %>
      </div>
    <% end %>
  </div>

  <%= render "pages/shared/footer" %>
</div>

