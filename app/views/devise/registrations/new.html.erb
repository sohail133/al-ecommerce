<div class="min-h-screen bg-pink-lightest flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="bg-white rounded-lg shadow-sm border border-pink-border p-8">
      <div>
        <h2 class="text-center text-3xl font-bold text-green-deep">Create your account</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
        <%= render "shared/form_errors", object: resource %>

        <div class="space-y-4">
          <div>
            <%= f.label :full_name, class: "block text-sm font-medium text-green-muted mb-1" %>
            <%= f.text_field :full_name, autofocus: true, placeholder: "Full Name", class: "form-input" %>
          </div>
          <div>
            <%= f.label :email, "Email address", class: "block text-sm font-medium text-green-muted mb-1" %>
            <%= f.email_field :email, autocomplete: "email", placeholder: "Email address", class: "form-input" %>
          </div>
          <div>
            <%= f.label :password, class: "block text-sm font-medium text-green-muted mb-1" %>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password#{' (' + @minimum_password_length.to_s + ' characters minimum)' if @minimum_password_length}", class: "form-input" %>
            <% if @minimum_password_length %>
              <p class="mt-1 text-xs text-green-muted"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
          </div>
          <div>
            <%= f.label :password_confirmation, "Password confirmation", class: "block text-sm font-medium text-green-muted mb-1" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: "form-input" %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign up", class: "btn-primary w-full" %>
        </div>
      <% end %>

      <div class="mt-6 space-y-3">
        <% if devise_mapping.registerable? %>
          <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "block w-full text-center btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
