<div class="min-h-screen bg-pink-lightest">
  <%= render "pages/shared/header" %>
  
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-3xl font-bold text-green-deep mb-8">My Dashboard</h1>

      <div class="bg-white rounded-lg shadow-sm border border-pink-border overflow-hidden">
        <div class="border-b border-pink-border">
          <nav class="flex space-x-1 px-6" role="tablist">
            <%= link_to dashboard_path, class: "px-6 py-4 text-sm font-medium text-green-muted border-b-2 border-transparent hover:text-green-deep hover:border-green-light transition-colors duration-200" do %>
              Orders
            <% end %>
            <span
              class="px-6 py-4 text-sm font-medium text-green-deep border-b-2 border-green-primary">
              My Account
            </span>
          </nav>
        </div>

        <div class="p-6">
          <div class="mb-6">
            <h2 class="text-2xl font-bold text-green-deep mb-2">My Account</h2>
            <p class="text-green-muted">Update your profile information</p>
          </div>

          <div class="max-w-2xl">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
              <%= render "shared/form_errors", object: resource %>

              <div>
                <%= f.label :full_name, class: "block text-sm font-medium text-green-deep mb-1" %>
                <%= f.text_field :full_name, autofocus: true, class: "form-input", required: true %>
              </div>

              <div>
                <%= f.label :email, class: "block text-sm font-medium text-green-deep mb-1" %>
                <%= f.email_field :email, autocomplete: "email", class: "form-input", required: true %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div class="text-sm text-yellow-600 bg-yellow-50 p-3 rounded-md">
                  Currently waiting confirmation for: <%= resource.unconfirmed_email %>
                </div>
              <% end %>

              <div>
                <%= f.label :password, class: "block text-sm font-medium text-green-deep mb-1" %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
                <p class="text-xs text-green-muted mt-1">(leave blank if you don't want to change it)</p>
                <% if @minimum_password_length %>
                  <p class="text-xs text-green-muted"><%= @minimum_password_length %> characters minimum</p>
                <% end %>
              </div>

              <div>
                <%= f.label :password_confirmation, "Password confirmation", class: "block text-sm font-medium text-green-deep mb-1" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
              </div>

              <div>
                <%= f.label :current_password, "Current password", class: "block text-sm font-medium text-green-deep mb-1" %>
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input", required: true %>
                <p class="text-xs text-green-muted mt-1">(we need your current password to confirm your changes)</p>
              </div>

              <div class="flex items-center space-x-3 pt-4 border-t border-pink-border">
                <%= f.submit "Update Profile", class: "btn-primary" %>
              </div>
            <% end %>

            <div class="mt-8 pt-8 border-t border-pink-border">
              <h3 class="text-lg font-semibold text-green-deep mb-2">Cancel my account</h3>
              <p class="text-sm text-green-muted mb-4">Unhappy? You can cancel your account below.</p>
              <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, data: { confirm: "Are you sure? This action cannot be undone.", turbo_confirm: "Are you sure? This action cannot be undone." }, class: "btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= render "pages/shared/footer" %>
</div>
