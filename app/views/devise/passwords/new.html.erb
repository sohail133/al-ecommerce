<div class="min-h-screen bg-pink-lightest flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="bg-white rounded-lg shadow-sm border border-pink-border p-8">
      <div>
        <h2 class="text-center text-3xl font-bold text-green-deep">Forgot your password?</h2>
        <p class="mt-2 text-center text-sm text-green-muted">Enter your email address and we'll send you instructions to reset your password.</p>
      </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mt-8 space-y-6" }) do |f| %>
        <%= render "shared/form_errors", object: resource %>

        <div>
          <%= f.label :email, "Email address", class: "block text-sm font-medium text-green-muted mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-input" %>
  </div>

        <div>
          <%= f.submit "Send me reset password instructions", class: "btn-primary w-full" %>
  </div>
<% end %>

      <div class="mt-6 space-y-3">
        <%= link_to "Back to log in", new_session_path(resource_name), class: "block w-full text-center btn-secondary" %>
        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "block w-full text-center text-sm text-green-primary hover:text-green-dark transition-colors duration-200" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
