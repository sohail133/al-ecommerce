<div class="min-h-screen bg-pink-lightest flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="bg-white rounded-lg shadow-sm border border-pink-border p-8">
      <div>
        <h2 class="text-center text-3xl font-bold text-green-deep">Log in to your account</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
        <%= render "shared/form_errors", object: resource %>
        
        <div class="space-y-4">
          <div>
            <%= f.label :email, "Email address", class: "block text-sm font-medium text-green-muted mb-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-input" %>
          </div>
          <div>
            <%= f.label :password, class: "block text-sm font-medium text-green-muted mb-1" %>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-input" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "form-checkbox" %>
            <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-green-deep" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Log in", class: "btn-primary w-full" %>
        </div>
      <% end %>

      <div class="mt-6 space-y-3">
        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "block w-full text-center btn-secondary" %>
        <% end %>
        
        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "block w-full text-center text-sm text-green-primary hover:text-green-dark transition-colors duration-200" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
