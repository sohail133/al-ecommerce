<% 
  # Accept status as a boolean or string
  status_value = local_assigns[:status]
  status_type = local_assigns.fetch(:type, :active)
  
  base_classes = "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
  
  case status_type
  when :active, :default
    if status_value
      badge_text = "Active"
      badge_classes = "#{base_classes} bg-green-light text-green-deep"
    else
      badge_text = "Inactive"
      badge_classes = "#{base_classes} bg-red-100 text-red-800"
    end
  when :user
    if status_value
      badge_text = "Active"
      badge_classes = "#{base_classes} bg-green-light text-green-deep"
    else
      badge_text = "Inactive"
      badge_classes = "#{base_classes} bg-red-100 text-red-800"
    end
  when :order
    status_str = status_value.to_s
    case status_str
    when "pending"
      badge_text = "Pending"
      badge_classes = "#{base_classes} bg-yellow-100 text-yellow-800"
    when "accepted"
      badge_text = "Accepted"
      badge_classes = "#{base_classes} bg-blue-100 text-blue-800"
    when "processing"
      badge_text = "Processing"
      badge_classes = "#{base_classes} bg-purple-100 text-purple-800"
    when "shipped"
      badge_text = "Shipped"
      badge_classes = "#{base_classes} bg-indigo-100 text-indigo-800"
    when "delivered"
      badge_text = "Delivered"
      badge_classes = "#{base_classes} bg-green-light text-green-deep"
    when "canceled"
      badge_text = "Canceled"
      badge_classes = "#{base_classes} bg-red-100 text-red-800"
    else
      badge_text = status_str.humanize
      badge_classes = "#{base_classes} bg-gray-100 text-gray-800"
    end
  else
    badge_text = status_value.to_s.humanize
    badge_classes = "#{base_classes} bg-gray-100 text-gray-800"
  end
%>

<span class="<%= badge_classes %>">
  <%= badge_text %>
</span>

