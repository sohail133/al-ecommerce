<% content_for :title, "Add Address - AL Ecommerce" %>

<div class="min-h-screen bg-pink-lightest">
  <%= render "pages/shared/header" %>

  <div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-green-deep mb-2">Add New Address</h1>
        <p class="text-green-muted">Add a new shipping address for your orders</p>
      </div>

      <div class="bg-white rounded-lg border border-pink-border shadow-sm p-6">
        <%= form_with model: @address, url: addresses_path, class: "space-y-4" do |f| %>
          <%= render "shared/form_errors", object: @address %>

          <div>
            <%= f.label :full_name, "Full Name", class: "block text-sm font-medium text-green-deep mb-1" %>
            <%= f.text_field :full_name, class: "form-input", required: true %>
          </div>

          <div>
            <%= f.label :phone_number, "Phone Number", class: "block text-sm font-medium text-green-deep mb-1" %>
            <%= f.text_field :phone_number, class: "form-input", required: true %>
          </div>

          <div>
            <%= f.label :address_line_1, "Address Line 1", class: "block text-sm font-medium text-green-deep mb-1" %>
            <%= f.text_field :address_line_1, class: "form-input", required: true %>
          </div>

          <div>
            <%= f.label :address_line_2, "Address Line 2 (Optional)", class: "block text-sm font-medium text-green-deep mb-1" %>
            <%= f.text_field :address_line_2, class: "form-input" %>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= f.label :city, "City", class: "block text-sm font-medium text-green-deep mb-1" %>
              <%= f.text_field :city, class: "form-input", required: true %>
            </div>

            <div>
              <%= f.label :province, "Province/State", class: "block text-sm font-medium text-green-deep mb-1" %>
              <%= f.text_field :province, class: "form-input", required: true %>
            </div>
          </div>

          <div>
            <%= f.label :postal_code, "Postal Code", class: "block text-sm font-medium text-green-deep mb-1" %>
            <%= f.text_field :postal_code, class: "form-input", required: true %>
          </div>

          <div class="flex items-center">
            <%= f.check_box :is_default, class: "form-checkbox mr-2" %>
            <%= f.label :is_default, "Set as default address", class: "text-sm text-green-deep" %>
          </div>

          <div class="flex items-center space-x-3 pt-4 border-t border-pink-border">
            <%= link_to "Cancel", checkout_path, class: "btn-secondary" %>
            <%= f.submit "Add Address", class: "btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= render "pages/shared/footer" %>
</div>

