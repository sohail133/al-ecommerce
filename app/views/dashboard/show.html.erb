<% content_for :title, "Dashboard - AL Ecommerce" %>

<div class="min-h-screen bg-pink-lightest">
  <%= render "pages/shared/header" %>

  <div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-3xl font-bold text-green-deep mb-8">My Dashboard</h1>

      <div class="bg-white rounded-lg shadow-sm border border-pink-border overflow-hidden">
        <div class="border-b border-pink-border">
          <nav class="flex space-x-1 px-6" role="tablist">
            <span
              class="px-6 py-4 text-sm font-medium text-green-deep border-b-2 border-green-primary">
              Orders
            </span>
            <%= link_to edit_user_registration_path, class: "px-6 py-4 text-sm font-medium text-green-muted border-b-2 border-transparent hover:text-green-deep hover:border-green-light transition-colors duration-200" do %>
              My Account
            <% end %>
          </nav>
        </div>

        <div class="p-6">
          <div class="block">
            <div class="mb-6">
              <h2 class="text-2xl font-bold text-green-deep mb-2">My Orders</h2>
              <p class="text-green-muted">View and manage your orders</p>
            </div>

            <% if @orders.any? %>
              <div class="space-y-4">
                <% @orders.each do |order| %>
                  <%= link_to order_path(order), class: "block bg-green-light/30 rounded-lg border border-pink-border p-6 hover:bg-green-light/50 hover:shadow-md transition-all duration-200" do %>
                    <div class="flex items-center justify-between">
                      <div class="flex-1">
                        <div class="flex items-center space-x-4 mb-2">
                          <h3 class="text-lg font-semibold text-green-deep">Order #<%= order.id %></h3>
                          <%= status_badge(order.status, type: :order) %>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm text-green-muted">
                          <div>
                            <span class="font-medium text-green-deep">Date:</span>
                            <%= order.created_at.strftime("%B %d, %Y") %>
                          </div>
                          <div>
                            <span class="font-medium text-green-deep">Items:</span>
                            <%= order.items_count %> items
                          </div>
                          <div>
                            <span class="font-medium text-green-deep">Total:</span>
                            <span class="text-green-primary font-semibold"><%= format_currency(order.total_amount) %></span>
                          </div>
                        </div>
                       <% if order.reviews.any? %>
                         <div class="mt-3 flex items-center text-sm">
                           <span class="text-green-muted">Reviews:</span>
                           <span class="ml-2 text-green-deep font-medium"><%= order.reviews.count %> review<%= 's' if order.reviews.count != 1 %></span>
                           <% latest_review = order.reviews.order(created_at: :desc).first %>
                           <% if latest_review.rating.present? %>
                             <div class="flex items-center ml-2">
                               <% 5.times do |i| %>
                                 <span class="text-yellow-400"><%= i < latest_review.rating.to_i ? "★" : "☆" %></span>
                               <% end %>
                             </div>
                           <% end %>
                         </div>
                       <% end %>
                      </div>
                      <div class="ml-4">
                        <%= render "shared/svg_icons/chevron_right", class: "w-6 h-6 text-green-muted" %>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>

              <% if @orders.total_pages > 1 %>
                <div class="mt-8 flex justify-center">
                  <%= paginate @orders, theme: 'admin' %>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-12">
                <p class="text-green-muted text-lg mb-4">You haven't placed any orders yet.</p>
                <%= link_to "Start Shopping", products_path, class: "btn-primary inline-flex items-center" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= render "pages/shared/footer" %>
</div>

