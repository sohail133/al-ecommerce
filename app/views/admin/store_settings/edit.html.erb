<div class="mb-6">
  <h1 class="text-2xl font-bold text-gray-800">Edit Store Settings</h1>
  <p class="text-gray-600">Update your store contact information and social media links</p>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <%= form_with model: [:admin, @store_setting], url: admin_store_setting_path, method: :patch, class: "space-y-6" do |f| %>
    <%= render "shared/form_errors", object: @store_setting %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, class: "form-input", required: true %>
      </div>
      <div>
        <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :phone_number, class: "form-input", required: true %>
      </div>
      <div class="md:col-span-2">
        <%= f.label :location, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :location, rows: 3, class: "form-input", required: true %>
      </div>
      <div>
        <%= f.label :facebook_url, "Facebook URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.url_field :facebook_url, class: "form-input", placeholder: "https://facebook.com/yourpage" %>
      </div>
      <div>
        <%= f.label :instagram_url, "Instagram URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.url_field :instagram_url, class: "form-input", placeholder: "https://instagram.com/yourpage" %>
      </div>
      <div>
        <%= f.label :youtube_url, "YouTube URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.url_field :youtube_url, class: "form-input", placeholder: "https://youtube.com/yourchannel" %>
      </div>
    </div>

    <div class="flex items-center space-x-3 pt-4 border-t border-gray-200">
      <%= link_to "Cancel", admin_store_setting_path, class: "btn-secondary" %>
      <%= f.submit "Update Settings", class: "btn-primary" %>
    </div>
  <% end %>
</div>

