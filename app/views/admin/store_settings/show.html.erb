<div class="mb-6">
  <h1 class="text-2xl font-bold text-gray-800">Store Settings</h1>
  <p class="text-gray-600">Manage your store contact information and social media links</p>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
      <p class="text-gray-900"><%= @store_setting.email %></p>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
      <p class="text-gray-900"><%= @store_setting.phone_number %></p>
    </div>
    <div class="md:col-span-2">
      <label class="block text-sm font-medium text-gray-700 mb-1">Location</label>
      <p class="text-gray-900"><%= @store_setting.location %></p>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Facebook URL</label>
      <p class="text-gray-900"><%= @store_setting.facebook_url.present? ? link_to(@store_setting.facebook_url, @store_setting.facebook_url, target: "_blank") : "Not set" %></p>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Instagram URL</label>
      <p class="text-gray-900"><%= @store_setting.instagram_url.present? ? link_to(@store_setting.instagram_url, @store_setting.instagram_url, target: "_blank") : "Not set" %></p>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">YouTube URL</label>
      <p class="text-gray-900"><%= @store_setting.youtube_url.present? ? link_to(@store_setting.youtube_url, @store_setting.youtube_url, target: "_blank") : "Not set" %></p>
    </div>
  </div>

  <div class="mt-6 pt-6 border-t border-gray-200">
    <%= link_to "Edit Settings", edit_admin_store_setting_path, class: "btn-primary" %>
  </div>
</div>

