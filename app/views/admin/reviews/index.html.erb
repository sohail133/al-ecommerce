<% content_for :title, "Reviews - Admin" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-green-deep">Reviews</h1>
      <p class="mt-2 text-sm text-green-muted">Manage customer reviews and ratings</p>
    </div>
    <%= link_to new_standalone_admin_reviews_path, class: "flex items-center px-4 py-2 text-sm font-medium text-white bg-green-primary rounded-md hover:bg-green-dark transition-colors" do %>
      <%= render "shared/svg_icons/add", class: "w-4 h-4 mr-2" %>
      New Review
    <% end %>
  </div>

  <div class="bg-white rounded-lg border border-pink-border shadow-sm">
    <div>
      <table class="min-w-full divide-y divide-pink-border">
        <thead class="bg-green-light sticky top-0 z-10">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Order</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Product</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Customer</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Rating</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Comment</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-pink-border">
          <% if @reviews.any? %>
            <% @reviews.each do |review| %>
              <tr class="hover:bg-green-light transition-colors cursor-pointer" data-controller="row-click" data-row-click-url-value="<%= admin_review_path(review) %>">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-green-deep">Order #<%= review.order.id %></div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm font-medium text-green-deep"><%= review.product.title %></div>
                  <div class="text-xs text-green-muted"><%= review.product_variant.name %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-green-deep"><%= review.user.full_name %></div>
                  <div class="text-xs text-green-muted"><%= review.user.email %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <% 5.times do |i| %>
                      <span class="text-yellow-400"><%= i < review.rating ? "★" : "☆" %></span>
                    <% end %>
                    <span class="ml-2 text-sm text-green-deep">(<%= review.rating %>)</span>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-green-deep max-w-xs truncate"><%= review.comment %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-green-deep"><%= review.created_at.strftime("%b %d, %Y") %></div>
                  <div class="text-xs text-green-muted"><%= review.created_at.strftime("%I:%M %p") %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm relative" onclick="event.stopPropagation()">
                  <%= render "admin/shared/actions_dropdown",
                      edit_path: edit_admin_review_path(review),
                      show_path: admin_review_path(review),
                      delete_path: admin_review_path(review),
                      delete_confirm: "Are you sure you want to delete this review?" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="7" class="px-6 py-12 text-center text-green-muted">
                No reviews found.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <% if @reviews.respond_to?(:current_page) %>
      <div class="px-6 py-4 border-t border-pink-border">
        <%= paginate @reviews, theme: 'admin' %>
      </div>
    <% end %>
  </div>
</div>

