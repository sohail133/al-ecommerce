<% content_for :title, "Review ##{@review.id} - Admin" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-green-deep">Review Details</h1>
      <p class="mt-2 text-sm text-green-muted">View and manage review information</p>
    </div>
    <div class="flex items-center space-x-3">
      <%= link_to edit_admin_review_path(@review), class: "btn-primary" do %>
        Edit
      <% end %>
      <%= render "admin/shared/delete_button", 
          path: admin_review_path(@review),
          confirm: "Are you sure you want to delete this review? This action cannot be undone." %>
      <%= link_to "Back to List", admin_reviews_path, class: "btn-secondary" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="bg-white rounded-lg shadow-sm border border-pink-border p-6">
      <h2 class="text-lg font-semibold text-green-deep mb-4">Review Information</h2>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-green-muted mb-1">Rating</label>
          <div class="flex items-center mt-1">
            <% 5.times do |i| %>
              <span class="text-2xl text-yellow-400"><%= i < @review.rating ? "★" : "☆" %></span>
            <% end %>
            <span class="ml-2 text-sm font-medium text-green-deep">(<%= @review.rating %> out of 5)</span>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-green-muted mb-1">Comment</label>
          <p class="text-green-deep bg-green-light/30 rounded-lg p-4 whitespace-pre-wrap"><%= @review.comment %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-green-muted mb-1">Submitted</label>
          <p class="text-green-deep"><%= @review.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        </div>
        <% if @review.updated_at != @review.created_at %>
          <div>
            <label class="block text-sm font-medium text-green-muted mb-1">Last Updated</label>
            <p class="text-green-deep"><%= @review.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-pink-border p-6">
      <h2 class="text-lg font-semibold text-green-deep mb-4">Order & Customer Information</h2>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-green-muted mb-1">Order</label>
          <p class="text-green-deep">
            <%= link_to "Order ##{@review.order.id}", admin_order_path(@review.order), class: "text-green-primary hover:text-green-dark" %>
          </p>
        </div>
        <div>
          <label class="block text-sm font-medium text-green-muted mb-1">Product</label>
          <p class="text-green-deep"><%= @review.product.title %></p>
          <p class="text-xs text-green-muted"><%= @review.product_variant.name %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-green-muted mb-1">Customer</label>
          <div class="flex items-center mt-1">
            <%= user_avatar(@review.user, size: 10, class_names: "flex-shrink-0") %>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-deep"><%= @review.user.full_name %></p>
              <p class="text-xs text-green-muted"><%= @review.user.email %></p>
            </div>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-green-muted mb-1">Order Total</label>
          <p class="text-green-deep"><%= format_currency(@review.order.total_amount) %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-green-muted mb-1">Order Date</label>
          <p class="text-green-deep"><%= @review.order.created_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>
    </div>
  </div>

  <% if @review.images.attached? %>
    <div class="bg-white rounded-lg shadow-sm border border-pink-border p-6">
      <h2 class="text-lg font-semibold text-green-deep mb-4">Review Images</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% @review.images.each do |image| %>
          <%= image_tag image, class: "w-full h-48 object-cover rounded-lg border border-pink-border" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

