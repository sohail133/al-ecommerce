<% path = local_assigns[:path] || local_assigns[:delete_path] %>
<% confirm_message = local_assigns[:confirm] || "Are you sure you want to delete this? This action cannot be undone." %>
<% if path %>
  <%= link_to path, data: { confirm: confirm_message, turbo_confirm: confirm_message, turbo_method: :delete }, class: "btn-danger" do %>
    <%= render "shared/svg_icons/trash", class: "w-4 h-4 mr-2" %>
    Delete
  <% end %>
<% end %>

