<header class="sticky top-0 z-40 h-16 bg-white dark:bg-white border-b border-pink-border dark:border-pink-border shadow-sm">
  <div class="flex items-center justify-between h-full px-4 lg:px-6">
    <button data-action="click->admin#openSidebar" class="lg:hidden text-green-deep dark:text-green-deep hover:text-green-primary dark:hover:text-green-primary p-2 rounded-lg hover:bg-green-light dark:hover:bg-green-light transition-colors duration-200">
      <%= render "shared/svg_icons/menu" %>
    </button>

    <div class="flex items-center justify-between flex-1 ml-4 lg:ml-0">
      <div class="hidden md:flex flex-1 max-w-md">
        <div class="relative w-full">
          <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
            <%= render "shared/svg_icons/search", class: "w-5 h-5 text-green-muted dark:text-green-muted" %>
          </div>
          <input type="text" 
                 placeholder="Search..." 
                 class="block w-full pl-10 pr-3 py-2 border border-pink-border dark:border-pink-border rounded-lg bg-white dark:bg-white text-green-deep dark:text-green-deep placeholder-green-muted dark:placeholder-green-muted focus:outline-none focus:ring-2 focus:ring-green-primary focus:border-transparent transition-all duration-200">
        </div>
      </div>

      <div class="flex items-center space-x-4">
        <button class="relative p-2 text-green-deep dark:text-green-deep hover:text-green-primary dark:hover:text-green-primary hover:bg-green-light dark:hover:bg-green-light rounded-lg transition-colors duration-200">
          <%= render "shared/svg_icons/notifications" %>
          <span class="absolute top-1 right-1 block h-2 w-2 rounded-full bg-error ring-2 ring-white dark:ring-white"></span>
        </button>

        <button data-action="click->admin#toggleDarkMode" 
                class="p-2 text-green-deep dark:text-green-deep hover:text-green-primary dark:hover:text-green-primary hover:bg-green-light dark:hover:bg-green-light rounded-lg transition-colors duration-200"
                aria-label="Toggle dark mode">
          <span data-admin-target="darkModeIcon" class="hidden">
            <%= render "shared/svg_icons/dark_mode" %>
          </span>
          <span data-admin-target="lightModeIcon">
            <%= render "shared/svg_icons/light_mode" %>
          </span>
        </button>

        <div class="relative">
          <button class="flex items-center space-x-2 p-2 rounded-lg hover:bg-green-light dark:hover:bg-green-light transition-colors duration-200">
            <div class="w-8 h-8 bg-green-primary rounded-full flex items-center justify-center">
              <span class="text-white text-sm font-medium">A</span>
            </div>
            <%= render "shared/svg_icons/chevron_down", class: "w-4 h-4 text-green-deep dark:text-green-deep hidden md:block" %>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>

