<% content_for :title, "Edit User - Admin" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-green-deep">Edit User</h1>
      <p class="mt-2 text-sm text-green-muted">Update user information</p>
    </div>
    <div class="flex items-center space-x-2">
      <%= link_to admin_user_path(@user), class: "flex items-center btn-secondary" do %>
        <%= render "shared/svg_icons/eye", class: "w-4 h-4 mr-2" %>
        View
      <% end %>
      <%= link_to admin_users_path, class: "flex items-center btn-secondary" do %>
        <%= render "shared/svg_icons/close", class: "w-4 h-4 mr-2" %>
        Back
      <% end %>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-pink-border shadow-sm p-6">
    <%= form_with model: [:admin, @user], local: true, class: "space-y-6" do |f| %>
      <%= render "shared/form_errors", object: @user %>

      <div>
        <%= f.label :full_name, class: "block text-sm font-medium text-green-deep mb-1" %>
        <%= f.text_field :full_name, class: "form-input" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-green-deep mb-1" %>
        <%= f.email_field :email, class: "form-input" %>
      </div>

      <div class="bg-green-light rounded-lg p-4 mb-6">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-xs font-medium text-green-muted mb-1">Role</label>
            <p class="text-sm font-medium text-green-deep"><%= role_badge(@user.role) %></p>
          </div>
          <div>
            <label class="block text-xs font-medium text-green-muted mb-1">Status</label>
            <div class="mt-1"><%= status_badge(@user.status, type: :user) %></div>
          </div>
        </div>
      </div>

      <div class="flex items-center justify-end space-x-3 pt-4 border-t border-pink-border">
        <%= link_to "Cancel", admin_user_path(@user), class: "btn-secondary" %>
        <%= f.submit "Update User", class: "btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

