<% content_for :title, "Edit Inventory - Admin" %>

<div class="space-y-6">
  <div>
    <h1 class="text-3xl font-bold text-green-deep">Edit Inventory</h1>
    <p class="mt-2 text-sm text-green-muted">Update inventory levels<% if @inventory&.product_variant %> for <%= @inventory.product_variant.name %><% end %></p>
  </div>

  <div class="bg-white rounded-lg border border-pink-border shadow-sm p-6">
    <% if @inventory %>
      <% if @inventory.persisted? %>
        <%= form_with model: [:admin, @inventory], local: true, class: "space-y-6" do |f| %>
          <%= render "shared/form_errors", object: @inventory %>

          <div class="bg-green-light rounded-lg p-4 mb-6">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-xs font-medium text-green-muted mb-1">Product</label>
                <p class="text-sm font-medium text-green-deep"><%= @inventory.product_variant.product.title %></p>
              </div>
              <div>
                <label class="block text-xs font-medium text-green-muted mb-1">Variant</label>
                <p class="text-sm font-medium text-green-deep"><%= @inventory.product_variant.name %></p>
              </div>
              <div>
                <label class="block text-xs font-medium text-green-muted mb-1">SKU</label>
                <p class="text-sm font-mono text-green-deep"><%= @inventory.product_variant.sku %></p>
              </div>
              <div>
                <label class="block text-xs font-medium text-green-muted mb-1">Current Available</label>
                <p class="text-sm font-medium text-green-deep"><%= @inventory.available_quantity %></p>
              </div>
            </div>
          </div>

          <div>
            <%= f.label :quantity, class: "block text-sm font-medium text-green-deep mb-1" %>
            <%= f.number_field :quantity, value: @inventory.quantity, min: 0, class: "form-input" %>
            <p class="mt-1 text-xs text-green-muted">Total quantity in stock</p>
          </div>

          <div>
            <%= f.label :reserved_quantity, class: "block text-sm font-medium text-green-deep mb-1" %>
            <%= f.number_field :reserved_quantity, value: @inventory.reserved_quantity, min: 0, class: "form-input" %>
            <p class="mt-1 text-xs text-green-muted">Quantity reserved for pending orders</p>
          </div>

          <div>
            <%= f.label :threshold_level, class: "block text-sm font-medium text-green-deep mb-1" %>
            <%= f.number_field :threshold_level, value: @inventory.threshold_level, min: 1, class: "form-input" %>
            <p class="mt-1 text-xs text-green-muted">Low stock alert threshold</p>
          </div>

          <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-yellow-800">
                  Available Quantity = Total Quantity - Reserved Quantity
                </p>
                <p class="text-xs text-yellow-700 mt-1">
                  Make sure reserved quantity does not exceed total quantity.
                </p>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-end space-x-3 pt-4 border-t border-pink-border">
            <%= link_to "Cancel", admin_product_variant_path(@inventory.product_variant), class: "btn-secondary" %>
            <%= f.submit "Update Inventory", class: "btn-primary" %>
          </div>
        <% end %>
      <% else %>
        <%= form_with model: [:admin, @inventory], url: admin_inventories_path, local: true, class: "space-y-6" do |f| %>
          <%= render "shared/form_errors", object: @inventory %>

          <div class="bg-green-light rounded-lg p-4 mb-6">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-xs font-medium text-green-muted mb-1">Product</label>
                <p class="text-sm font-medium text-green-deep"><%= @inventory.product_variant.product.title %></p>
              </div>
              <div>
                <label class="block text-xs font-medium text-green-muted mb-1">Variant</label>
                <p class="text-sm font-medium text-green-deep"><%= @inventory.product_variant.name %></p>
              </div>
              <div>
                <label class="block text-xs font-medium text-green-muted mb-1">SKU</label>
                <p class="text-sm font-mono text-green-deep"><%= @inventory.product_variant.sku %></p>
              </div>
            </div>
          </div>

          <%= f.hidden_field :product_variant_id %>

          <div>
            <%= f.label :quantity, class: "block text-sm font-medium text-green-deep mb-1" %>
            <%= f.number_field :quantity, value: @inventory.quantity || 0, min: 0, class: "form-input" %>
            <p class="mt-1 text-xs text-green-muted">Total quantity in stock</p>
          </div>

          <div>
            <%= f.label :reserved_quantity, class: "block text-sm font-medium text-green-deep mb-1" %>
            <%= f.number_field :reserved_quantity, value: @inventory.reserved_quantity || 0, min: 0, class: "form-input" %>
            <p class="mt-1 text-xs text-green-muted">Quantity reserved for pending orders</p>
          </div>

          <div>
            <%= f.label :threshold_level, class: "block text-sm font-medium text-green-deep mb-1" %>
            <%= f.number_field :threshold_level, value: @inventory.threshold_level || 10, min: 1, class: "form-input" %>
            <p class="mt-1 text-xs text-green-muted">Low stock alert threshold</p>
          </div>

          <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-yellow-800">
                  Available Quantity = Total Quantity - Reserved Quantity
                </p>
                <p class="text-xs text-yellow-700 mt-1">
                  Make sure reserved quantity does not exceed total quantity.
                </p>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-end space-x-3 pt-4 border-t border-pink-border">
            <%= link_to "Cancel", admin_product_variant_path(@inventory.product_variant), class: "btn-secondary" %>
            <%= f.submit "Create Inventory", class: "btn-primary" %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
