<% content_for :title, "Products - Admin" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-green-deep">Products</h1>
      <p class="mt-2 text-sm text-green-muted">Manage all products in your store</p>
    </div>
    <%= link_to new_admin_product_path, class: "flex items-center px-4 py-2 text-sm font-medium text-white bg-green-primary rounded-md hover:bg-green-dark transition-colors" do %>
      <%= render "shared/svg_icons/add", class: "w-4 h-4 mr-2" %>
      Add Product
    <% end %>
  </div>

  <div class="bg-white rounded-lg border border-pink-border shadow-sm">
    <div>
      <table class="min-w-full divide-y divide-pink-border">
        <thead class="bg-green-light">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Product</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Category</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Price</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Variants</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-pink-border">
          <% @products.each do |product| %>
            <tr class="hover:bg-green-light transition-colors">
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-green-deep"><%= product.title %></div>
                <% if product.description.present? %>
                  <div class="text-xs text-green-muted line-clamp-1 mt-1"><%= product.description %></div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-green-deep"><%= product.category.name %></div>
                <% if product.subcategory %>
                  <div class="text-xs text-green-muted"><%= product.subcategory.name %></div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-green-deep"><%= format_currency(product.price) %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-green-deep"><%= product.variants_count %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= status_badge(product.active, type: :active) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= render "admin/shared/actions_dropdown", resource: product, show_path: admin_product_path(product), edit_path: edit_admin_product_path(product), delete_path: admin_product_path(product) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <% if @products.empty? %>
    <div class="bg-white rounded-lg border border-pink-border shadow-sm p-12 text-center">
      <p class="text-green-muted">No products found. Create your first product to get started.</p>
    </div>
  <% end %>
</div>

