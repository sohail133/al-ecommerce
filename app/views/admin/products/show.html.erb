<% content_for :title, "#{@product.title} - Admin" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-green-deep"><%= @product.title %></h1>
      <p class="mt-2 text-sm text-green-muted">Product details and variants</p>
    </div>
    <div class="flex items-center space-x-2">
      <%= link_to edit_admin_product_path(@product), class: "flex items-center btn-secondary" do %>
        <%= render "shared/svg_icons/edit", class: "w-4 h-4 mr-2" %>
        Edit
      <% end %>
      <%= render "admin/shared/delete_button", delete_path: admin_product_path(@product) %>
      <%= link_to admin_product_variants_path(product_id: @product.id), class: "flex items-center btn-secondary" do %>
        <%= render "shared/svg_icons/product_variants", class: "w-4 h-4 mr-2" %>
        Manage Variants
      <% end %>
      <%= link_to admin_products_path, class: "flex items-center btn-secondary" do %>
        <%= render "shared/svg_icons/arrow_left", class: "w-4 h-4 mr-2" %>
        Back
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <div class="bg-white rounded-lg border border-pink-border shadow-sm p-6">
      <h2 class="text-lg font-semibold text-green-deep mb-4">Product Information</h2>
      
      <% if @product.cover_image.attached? || @product.images.attached? %>
        <div class="mb-6 pb-6 border-b border-pink-border">
          <% if @product.cover_image.attached? %>
            <div class="mb-4">
              <p class="text-xs font-medium text-green-primary mb-2">Cover Photo</p>
              <%= image_tag @product.cover_image, class: "w-full max-w-sm h-64 object-cover rounded-lg border-2 border-green-primary" %>
            </div>
          <% end %>

          <% if @product.images.attached? %>
            <div>
              <p class="text-xs font-medium text-green-muted mb-2">Gallery (<%= @product.images.count %> images)</p>
              <div class="grid grid-cols-4 gap-2">
                <% @product.images.each do |image| %>
                  <%= image_tag image, class: "w-full h-20 object-cover rounded border border-pink-border hover:opacity-75 transition-opacity cursor-pointer" %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
      
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-green-muted mb-1">Title</label>
          <p class="text-sm text-green-deep"><%= @product.title %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-green-muted mb-1">Category</label>
          <p class="text-sm text-green-deep"><%= link_to @product.category.name, admin_category_path(@product.category), class: "text-green-primary hover:text-green-dark" %></p>
        </div>
        <% if @product.subcategory %>
          <div>
            <label class="block text-sm font-medium text-green-muted mb-1">Subcategory</label>
            <p class="text-sm text-green-deep"><%= link_to @product.subcategory.name, admin_subcategory_path(@product.subcategory), class: "text-green-primary hover:text-green-dark" %></p>
          </div>
        <% end %>
        <div>
          <label class="block text-sm font-medium text-green-muted mb-1">Price</label>
          <p class="text-sm font-medium text-green-deep"><%= format_currency(@product.price) %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-green-muted mb-1">Status</label>
          <div class="mt-1"><%= status_badge(@product.active, type: :active) %></div>
        </div>
        <% if @product.description.present? %>
          <div>
            <label class="block text-sm font-medium text-green-muted mb-1">Description</label>
            <p class="text-sm text-green-deep whitespace-pre-wrap"><%= @product.description %></p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bg-white rounded-lg border border-pink-border shadow-sm p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold text-green-deep">Product Variants</h2>
        <%= link_to new_admin_product_variant_path(product_id: @product.id), class: "flex items-center px-3 py-1.5 text-xs font-medium text-white bg-green-primary rounded-md hover:bg-green-dark" do %>
          <%= render "shared/svg_icons/add", class: "w-3 h-3 mr-1" %>
          Add Variant
        <% end %>
      </div>
      <% if @product.product_variants.any? %>
        <div class="space-y-3">
          <% @product.product_variants.each do |variant| %>
            <div class="p-3 border border-pink-border rounded-lg hover:bg-green-light transition-colors">
              <%= link_to admin_product_variant_path(variant), class: "flex items-center justify-between" do %>
                <div class="flex-1">
                  <p class="text-sm font-medium text-green-deep"><%= variant.name %></p>
                  <p class="text-xs text-green-muted">SKU: <%= variant.sku %></p>
                </div>
                <div class="text-right">
                  <p class="text-sm font-medium text-green-deep"><%= format_currency(variant.price) %></p>
                  <%= status_badge(variant.active, type: :active) %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-green-muted text-center py-4">No variants yet</p>
      <% end %>
    </div>
  </div>
</div>

