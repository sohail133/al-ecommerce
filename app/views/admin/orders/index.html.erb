<% content_for :title, "Orders - Admin" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-green-deep">Orders</h1>
      <p class="mt-2 text-sm text-green-muted">Manage customer orders and track their status</p>
    </div>
  </div>

  <%= render "filters" %>

  <div class="bg-white rounded-lg border border-pink-border shadow-sm">
    <div>
      <table class="min-w-full divide-y divide-pink-border">
        <thead class="bg-green-light sticky top-0 z-10">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Order ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Customer</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Items</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Total Amount</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-pink-border">
          <% @orders.each do |order| %>
            <tr class="hover:bg-green-light transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-green-deep">#<%= order.id %></div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-green-deep"><%= order.user.full_name %></div>
                <div class="text-xs text-green-muted"><%= order.user.email %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-green-deep"><%= order.items_count %> items</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-green-deep"><%= format_currency(order.total_amount) %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= status_badge(order.status, type: :order) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-green-deep"><%= order.created_at.strftime("%b %d, %Y") %></div>
                <div class="text-xs text-green-muted"><%= order.created_at.strftime("%I:%M %p") %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= render "admin/shared/actions_dropdown", resource: order, show_path: admin_order_path(order), edit_path: edit_admin_order_path(order), delete_path: nil %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <% if @orders.empty? %>
    <div class="bg-white rounded-lg border border-pink-border shadow-sm p-12 text-center">
      <p class="text-green-muted">
        <% if filters_active? %>
          No orders found matching your search. Try adjusting your filters.
        <% else %>
          No orders found. Orders will appear here once customers start placing orders.
        <% end %>
      </p>
    </div>
  <% end %>

  <% if @orders.present? %>
    <div class="bg-white rounded-lg border border-pink-border shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div class="text-sm text-green-muted">
          Showing <span class="font-medium text-green-deep"><%= @orders.offset_value + 1 %></span> to <span class="font-medium text-green-deep"><%= [@orders.offset_value + @orders.limit_value, @orders.total_count].min %></span> of <span class="font-medium text-green-deep"><%= @orders.total_count %></span> orders
        </div>
        <div>
          <%= paginate @orders, theme: 'admin' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
