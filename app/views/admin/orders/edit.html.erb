<% content_for :title, "Edit Order ##{@order.id} - Admin" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-green-deep">Edit Order #<%= @order.id %></h1>
      <p class="mt-2 text-sm text-green-muted">Update order status</p>
    </div>
    <div class="flex items-center space-x-2">
      <%= link_to admin_order_path(@order), class: "flex items-center btn-secondary" do %>
        <%= render "shared/svg_icons/eye", class: "w-4 h-4 mr-2" %>
        View
      <% end %>
      <%= link_to admin_orders_path, class: "flex items-center btn-secondary" do %>
        <%= render "shared/svg_icons/arrow_left", class: "w-4 h-4 mr-2" %>
        Back
      <% end %>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-pink-border shadow-sm p-6">
    <%= form_with model: [:admin, @order], local: true, class: "space-y-6" do |f| %>
      <%= render "shared/form_errors", object: @order %>

      <div>
        <%= f.label :status, class: "block text-sm font-medium text-green-deep mb-1" %>
        <%= f.select :status, options_for_select([
          ['Pending', 'pending'],
          ['Accepted', 'accepted'],
          ['Processing', 'processing'],
          ['Shipped', 'shipped'],
          ['Delivered', 'delivered'],
          ['Canceled', 'canceled']
        ], @order.status), {}, { class: "form-select" } %>
        <p class="mt-1 text-xs text-green-muted">Select the current status of this order</p>
      </div>

      <div class="bg-green-light rounded-lg p-4 mb-6">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-xs font-medium text-green-muted mb-1">Order ID</label>
            <p class="text-sm font-medium text-green-deep">#<%= @order.id %></p>
          </div>
          <div>
            <label class="block text-xs font-medium text-green-muted mb-1">Customer</label>
            <p class="text-sm font-medium text-green-deep"><%= @order.user.full_name %></p>
          </div>
          <div>
            <label class="block text-xs font-medium text-green-muted mb-1">Total Amount</label>
            <p class="text-sm font-medium text-green-deep"><%= format_currency(@order.total_amount) %></p>
          </div>
          <div>
            <label class="block text-xs font-medium text-green-muted mb-1">Items</label>
            <p class="text-sm font-medium text-green-deep"><%= @order.items_count %> items</p>
          </div>
        </div>
      </div>

      <div class="flex items-center justify-end space-x-3 pt-4 border-t border-pink-border">
        <%= link_to "Cancel", admin_order_path(@order), class: "btn-secondary" %>
        <%= f.submit "Update Order", class: "btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
