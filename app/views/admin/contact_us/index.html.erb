<% content_for :title, "Contact Us - Admin" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-green-deep">Contact Us Queries</h1>
      <p class="mt-2 text-sm text-green-muted">Manage customer inquiries and responses</p>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-pink-border shadow-sm">
    <div>
      <table class="min-w-full divide-y divide-pink-border">
        <thead class="bg-green-light sticky top-0 z-10">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Subject</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-green-deep uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-pink-border">
          <% if @contact_us.any? %>
            <% @contact_us.each do |contact| %>
              <tr class="hover:bg-green-light transition-colors cursor-pointer" data-controller="row-click" data-row-click-url-value="<%= admin_contact_path(contact) %>">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-green-deep"><%= contact.name %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-green-deep"><%= contact.email %></div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-green-deep max-w-xs truncate"><%= contact.subject %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-green-deep"><%= contact.created_at.strftime("%b %d, %Y") %></div>
                  <div class="text-xs text-green-muted"><%= contact.created_at.strftime("%I:%M %p") %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if contact.replied? %>
                    <%= status_badge(true, type: :active) %>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      Pending
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm relative" onclick="event.stopPropagation()">
                  <%= render "admin/shared/actions_dropdown",
                      edit_path: edit_admin_contact_path(contact),
                      show_path: admin_contact_path(contact),
                      delete_path: admin_contact_path(contact),
                      delete_confirm: "Are you sure you want to delete this contact query?" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-12 text-center text-green-muted">
                No contact queries found.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <% if @contact_us.respond_to?(:current_page) %>
    <div class="px-6 py-4 border-t border-pink-border">
      <%= paginate @contact_us, theme: 'admin' %>
    </div>
  <% end %>
</div>
