<% content_for :title, "#{@category.name} - Admin" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-green-deep"><%= @category.name %></h1>
      <p class="mt-2 text-sm text-green-muted">Category details and related products</p>
    </div>
    <div class="flex items-center space-x-2">
      <%= link_to edit_admin_category_path(@category), class: "flex items-center btn-secondary" do %>
        <%= render "shared/svg_icons/edit", class: "w-4 h-4 mr-2" %>
        Edit
      <% end %>
      <%= render "admin/shared/delete_button", delete_path: admin_category_path(@category) %>
      <%= link_to admin_categories_path, class: "flex items-center btn-secondary" do %>
        <%= render "shared/svg_icons/arrow_left", class: "w-4 h-4 mr-2" %>
        Back
      <% end %>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-pink-border shadow-sm p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% if @category.image.attached? %>
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-green-muted mb-2">Category Image</label>
          <%= image_tag @category.image, class: "w-64 h-64 object-cover rounded-lg border border-pink-border" %>
        </div>
      <% end %>
      
      <div>
        <label class="block text-sm font-medium text-green-muted mb-1">Name</label>
        <p class="text-sm text-green-deep"><%= @category.name %></p>
      </div>
      <% if @category.description.present? %>
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-green-muted mb-1">Description</label>
          <p class="text-sm text-green-deep"><%= @category.description %></p>
        </div>
      <% end %>
    </div>

    <div class="mt-6 pt-6 border-t border-pink-border">
      <h3 class="text-lg font-semibold text-green-deep mb-4">Sub Categories</h3>
      <% if @category.subcategories.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% @category.subcategories.each do |subcategory| %>
            <%= link_to admin_subcategory_path(subcategory), class: "p-4 border border-pink-border rounded-lg hover:bg-green-light transition-colors" do %>
              <p class="font-medium text-green-deep"><%= subcategory.name %></p>
              <p class="text-xs text-green-muted mt-1"><%= subcategory.products_count %> products</p>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-green-muted">No subcategories</p>
      <% end %>
    </div>
  </div>
</div>

