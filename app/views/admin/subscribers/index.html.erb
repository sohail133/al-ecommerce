<div class="flex flex-col flex-1 overflow-x-hidden overflow-y-auto">
  <div class="p-4 lg:p-6">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
      <div>
        <h1 class="text-2xl font-bold text-green-deep dark:text-green-deep">Newsletter Subscribers</h1>
        <p class="text-green-muted dark:text-green-muted mt-1">Manage your newsletter subscribers</p>
      </div>
      <div class="flex gap-2">
        <%= link_to export_admin_subscribers_path(format: :csv), 
            class: "btn-primary inline-flex items-center" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Export CSV
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
      <div class="bg-white dark:bg-white rounded-lg shadow-sm border border-pink-border dark:border-pink-border p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-green-muted dark:text-green-muted">Total Subscribers</p>
            <p class="text-3xl font-bold text-green-deep dark:text-green-deep mt-2"><%= @total_subscribers %></p>
          </div>
          <div class="p-3 bg-green-light dark:bg-green-light rounded-full">
            <svg class="w-8 h-8 text-green-primary dark:text-green-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-white rounded-lg shadow-sm border border-pink-border dark:border-pink-border p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-green-muted dark:text-green-muted">Active Subscribers</p>
            <p class="text-3xl font-bold text-green-primary dark:text-green-primary mt-2"><%= @active_subscribers %></p>
          </div>
          <div class="p-3 bg-green-light dark:bg-green-light rounded-full">
            <svg class="w-8 h-8 text-green-primary dark:text-green-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-white rounded-lg shadow-sm border border-pink-border dark:border-pink-border p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-green-muted dark:text-green-muted">Unsubscribed</p>
            <p class="text-3xl font-bold text-red-500 dark:text-red-500 mt-2"><%= @unsubscribed %></p>
          </div>
          <div class="p-3 bg-red-50 dark:bg-red-50 rounded-full">
            <svg class="w-8 h-8 text-red-500 dark:text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-white rounded-lg shadow-sm border border-pink-border dark:border-pink-border">
      <div class="p-6 border-b border-pink-border dark:border-pink-border">
        <%= form_with url: admin_subscribers_path, method: :get, local: true, class: "flex flex-col md:flex-row gap-4" do |f| %>
          <div class="flex-1">
            <%= f.text_field :query, 
                value: params[:query], 
                placeholder: "Search by email...", 
                class: "w-full px-4 py-2 border border-pink-border dark:border-pink-border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-primary dark:focus:ring-green-primary bg-white dark:bg-white text-green-deep dark:text-green-deep" %>
          </div>
          <div>
            <%= f.select :status, 
                options_for_select([["All Status", ""], ["Active", "active"], ["Unsubscribed", "unsubscribed"]], params[:status]), 
                {}, 
                { class: "px-4 py-2 border border-pink-border dark:border-pink-border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-primary dark:focus:ring-green-primary bg-white dark:bg-white text-green-deep dark:text-green-deep" } %>
          </div>
          <%= f.submit "Filter", class: "btn-primary px-6 py-2" %>
          <%= link_to "Reset", admin_subscribers_path, class: "btn-secondary px-6 py-2" %>
        <% end %>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-pink-border dark:divide-pink-border">
          <thead class="bg-green-light dark:bg-green-light">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-green-deep dark:text-green-deep uppercase tracking-wider">Email</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-green-deep dark:text-green-deep uppercase tracking-wider">Status</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-green-deep dark:text-green-deep uppercase tracking-wider">Subscribed At</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-green-deep dark:text-green-deep uppercase tracking-wider">Unsubscribed At</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-green-deep dark:text-green-deep uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white dark:bg-white divide-y divide-pink-border dark:divide-pink-border">
            <% if @subscribers.any? %>
              <% @subscribers.each do |subscriber| %>
                <tr class="hover:bg-green-light dark:hover:bg-green-light transition-colors duration-200">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-green-deep dark:text-green-deep"><%= subscriber.email %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if subscriber.active? %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                        Active
                      </span>
                    <% else %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                        Unsubscribed
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-green-muted dark:text-green-muted">
                    <%= subscriber.subscribed_at&.strftime("%b %d, %Y %H:%M") || "-" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-green-muted dark:text-green-muted">
                    <%= subscriber.unsubscribed_at&.strftime("%b %d, %Y %H:%M") || "-" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex items-center justify-end gap-3">
                      <%= link_to admin_subscriber_path(subscriber), 
                          class: "text-green-primary dark:text-green-primary hover:text-green-dark dark:hover:text-green-dark transition-colors duration-200",
                          title: "View" do %>
                        <%= render "shared/svg_icons/eye", class: "w-5 h-5" %>
                      <% end %>
                      <%= button_to toggle_status_admin_subscriber_path(subscriber), 
                          method: :patch,
                          class: "text-blue-600 dark:text-blue-600 hover:text-blue-800 dark:hover:text-blue-800 transition-colors duration-200",
                          title: subscriber.active? ? "Unsubscribe" : "Resubscribe" do %>
                        <%= render "shared/svg_icons/toggle", class: "w-5 h-5" %>
                      <% end %>
                      <%= button_to admin_subscriber_path(subscriber), 
                          method: :delete, 
                          data: { turbo_confirm: "Are you sure you want to delete this subscriber?" },
                          class: "text-red-600 dark:text-red-600 hover:text-red-800 dark:hover:text-red-800 transition-colors duration-200",
                          title: "Delete" do %>
                        <%= render "shared/svg_icons/trash", class: "w-5 h-5" %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="5" class="px-6 py-12 text-center">
                  <div class="flex flex-col items-center">
                    <svg class="w-16 h-16 text-green-muted dark:text-green-muted mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                    </svg>
                    <p class="text-lg font-medium text-green-deep dark:text-green-deep">No subscribers found</p>
                    <p class="text-green-muted dark:text-green-muted mt-2">Try adjusting your search or filter criteria</p>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @subscribers.any? %>
        <div class="px-6 py-4 border-t border-pink-border dark:border-pink-border">
          <div class="flex items-center justify-between">
            <div class="text-sm text-green-muted dark:text-green-muted">
              Showing <span class="font-medium text-green-deep dark:text-green-deep"><%= @subscribers.offset_value + 1 %></span> to <span class="font-medium text-green-deep dark:text-green-deep"><%= [@subscribers.offset_value + @subscribers.limit_value, @subscribers.total_count].min %></span> of <span class="font-medium text-green-deep dark:text-green-deep"><%= @subscribers.total_count %></span> subscribers
            </div>
            <div>
              <%= paginate @subscribers, theme: 'admin' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

