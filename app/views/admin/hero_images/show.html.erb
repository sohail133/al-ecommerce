<div class="mb-6 flex justify-between items-center">
  <div>
    <h1 class="text-2xl font-bold text-gray-800">Hero Image Details</h1>
    <p class="text-gray-600">View hero image information</p>
  </div>
  <%= link_to "Edit", edit_admin_hero_image_path(@hero_image), class: "btn-primary" %>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
      <p class="text-gray-900"><%= @hero_image.title %></p>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Position</label>
      <p class="text-gray-900"><%= @hero_image.position %></p>
    </div>
    <% if @hero_image.subtitle.present? %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Subtitle</label>
        <p class="text-gray-900"><%= @hero_image.subtitle %></p>
      </div>
    <% end %>
    <% if @hero_image.description.present? %>
      <div class="md:col-span-2">
        <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
        <p class="text-gray-900"><%= @hero_image.description %></p>
      </div>
    <% end %>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
      <%= render "shared/status_badge", status: @hero_image.active? %>
    </div>
  </div>

  <% if @hero_image.images.attached? %>
    <div class="border-t border-gray-200 pt-6">
      <h3 class="text-sm font-medium text-gray-700 mb-4">Images (<%= @hero_image.images.count %>)</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% @hero_image.images.each do |image| %>
          <div class="relative">
            <%= image_tag image, class: "w-full h-48 object-cover rounded border border-gray-200" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="mt-6 pt-6 border-t border-gray-200 flex items-center space-x-3">
    <%= link_to "Back to List", admin_hero_images_path, class: "btn-secondary" %>
    <%= link_to "Edit", edit_admin_hero_image_path(@hero_image), class: "btn-primary" %>
    <%= link_to "Delete", admin_hero_image_path(@hero_image), method: :delete, 
        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this hero image?" },
        class: "btn-danger" %>
  </div>
</div>

